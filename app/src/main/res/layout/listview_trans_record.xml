<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txt_trans_num1"
            style="@style/normal_black_text"
            android:text="订单号：" />

        <TextView
            android:id="@+id/txt_trans_num"
            style="@style/normal_black_text"
            android:layout_toRightOf="@+id/txt_trans_num1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_stroke" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txt_trans_type1"
            style="@style/normal_black_text"
            android:text="交易类型：" />

        <TextView
            android:id="@+id/txt_trans_type"
            style="@style/normal_black_text"
            android:layout_toRightOf="@+id/txt_trans_type1"
            android:text="现金" />

        <TextView
            android:id="@+id/txt_trans_money1"
            style="@style/normal_black_text"
            android:layout_toLeftOf="@+id/txt_trans_money"
            android:text="金额：" />

        <TextView
            android:id="@+id/txt_trans_money"
            style="@style/normal_black_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red_text"
            android:text="0.01" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_stroke" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txt_trans_time1"
            style="@style/normal_black_text"
            android:text="时间：" />

        <TextView
            android:id="@+id/txt_trans_time"
            style="@style/normal_black_text"
            android:layout_toRightOf="@+id/txt_trans_time1"
            android:text="2017/02/14 16:00:00" />

        <TextView
            android:id="@+id/txt_upload_status1"
            style="@style/normal_black_text"
            android:layout_toLeftOf="@+id/txt_upload_status"
            android:text="流水状态：" />

        <TextView
            android:id="@+id/txt_upload_status"
            style="@style/normal_black_text"
            android:layout_alignParentRight="true"
            android:text="未上传" />

    </RelativeLayout>

</LinearLayout>